{
  "name": "cdc-wsl-build",
  "version": "2.0.1",
  "description": "For building Windows Subsystem Linux (WSL) images",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdcent/ocio-wsl.git"
  },
  "keywords": [
    "wsl",
    "builds",
    "linux",
    "distro"
  ],
  "author": "Boris Ning",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdcent/ocio-wsl/issues"
  },
  "homepage": "https://github.com/cdcent/ocio-wsl#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "semantic-release": "^24.2.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "${version}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "images/ubuntu-24.04-cdc.tar",
              "label": "Image distribution"
            },
            {
              "path": "images/checksums.txt",
              "label": "Checksums for integrity validation"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  }
}
